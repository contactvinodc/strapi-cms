{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "summary": {
      "type": "text",
      "maxLength": 300
    },
    "posted_at": {
      "type": "date"
    },
    "description": {
      "type": "richtext"
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "status": {
      "type": "boolean",
      "default": true
    }
  }
}
